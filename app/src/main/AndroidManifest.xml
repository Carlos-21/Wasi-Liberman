<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="aplicacion.liberman.com.wasi">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".controlador.Inicio">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controlador.Perfil"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".controlador.Login"
            android:parentActivityName=".controlador.Perfil">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controlador.Perfil" />
        </activity>
        <activity
            android:name=".controlador.Apoderado"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".controlador.Movilidad"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".controlador.Profesor"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".controlador.VerHijoApoderado"
            android:parentActivityName=".controlador.Apoderado">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controlador.Apoderado" />
        </activity>
        <activity
            android:name=".controlador.PermitirSalida"
            android:parentActivityName=".controlador.VerHijoApoderado">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controlador.VerHijoApoderado" />
        </activity>
        <activity android:name=".controlador.SalidaPermitida"
            android:parentActivityName=".controlador.VerHijoApoderado">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controlador.VerHijoApoderado" />
        </activity>
        <activity android:name=".controlador.ConfirmarRecogedor"
            android:parentActivityName=".controlador.Apoderado">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controlador.Apoderado" />
        </activity>
        <activity
            android:name=".controlador.VerHijoMovilidad"
            android:parentActivityName=".controlador.Movilidad">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controlador.Movilidad" />
        </activity>
        <activity
            android:name=".controlador.VerHijoProfesor"
            android:parentActivityName=".controlador.Profesor">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controlador.Profesor" />
        </activity>
        <activity android:name=".controlador.LoginFirebase" />
        <activity android:name=".controlador.VerRegistroSalida"
            android:parentActivityName=".controlador.Apoderado">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controlador.Apoderado" />
        </activity>
    </application>

</manifest>
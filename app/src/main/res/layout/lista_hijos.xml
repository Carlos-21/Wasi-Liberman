<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="147dp"
    android:background="@color/colorFondo">

    <android.support.v7.widget.CardView
        android:id="@+id/carta"
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorFondo">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorFondo"
            android:padding="16dp">

            <ImageView
                android:id="@+id/fotoHijo"
                android:layout_width="97dp"
                android:layout_height="96dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:src="@drawable/hijo" />

            <TextView
                android:id="@+id/textoApellido"
                android:layout_width="228dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/fotoHijo"
                android:text="Apellidos: Bunbury Ozaldir"
                android:textColor="@android:color/background_light"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textoNombre"
                android:layout_width="228dp"
                android:layout_height="32dp"
                android:layout_alignStart="@+id/textoApellido"
                android:layout_centerVertical="true"
                android:text="Nombres: Fernando Joaquin"
                android:textColor="@android:color/background_light"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textoGrado"
                android:layout_width="228dp"
                android:layout_height="32dp"
                android:layout_alignBottom="@+id/fotoHijo"
                android:layout_alignStart="@+id/textoNombre"
                android:text="Grado: 5to de primaria"
                android:textColor="@android:color/background_light"
                android:textSize="17sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>
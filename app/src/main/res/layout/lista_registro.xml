<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:padding="12dp"
    android:background="@color/colorFondo">

    <android.support.v7.widget.CardView
        android:id="@+id/oCartaHijoSalida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorFondo"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@color/colorCartaHijo"
            >

            <ImageView
                android:id="@+id/oFotoHijoSalida"
                android:layout_width="107dp"
                android:layout_height="107dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="12dp"
                android:src="@drawable/hijo" />

            <TextView
                android:id="@+id/oTextoDatosSalida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_toRightOf="@+id/oFotoHijoSalida"
                android:text="Hijo: Dante Paolo Lopez Rivera\nFecha: 12/12/2018\nHora: 20:24:45\n Usuario: user01"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp" />


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:padding="12dp"
    android:background="@color/colorFondo">

    <android.support.v7.widget.CardView
        android:id="@+id/oCartaHijo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorFondo"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@color/colorCartaHijo"
            >

            <ImageView
                android:id="@+id/oFotoHijo"
                android:layout_width="107dp"
                android:layout_height="107dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="12dp"
                android:src="@drawable/hijo" />

            <TextView
                android:id="@+id/oTextoDatos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_toRightOf="@+id/oFotoHijo"
                android:text="Apellidos: Bunbury Ozaldir\nNombres: Fernando Alberto\nGrado: 5to primaria"
                android:textColor="@android:color/background_dark"
                android:textSize="17sp" />


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controlador.ConfirmarRecogedor">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/background_login" />
        <ImageView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:gravity="top">


        <ImageView
            android:id="@+id/imagenLoginPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/perfil_recogedor" />

        <TextView
            android:id="@+id/labelPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imagenLoginPerfil"
            android:layout_gravity="center"
            android:text="Recogedor"
            android:textColor="@color/md_black_1000"
            android:textSize="28dp" />

        <LinearLayout
            android:id="@+id/layoutInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="20dp"
            android:background="@color/md_white_1000"
            android:orientation="vertical"
            android:padding="20dp">

            <EditText
                android:id="@+id/textoUsuarioRecogedor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/usuario"
                android:drawablePadding="20dp"
                android:hint="Usuario"
                android:inputType="textPersonName"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/textoClaveRecogedor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/llave"
                android:drawablePadding="20dp"
                android:hint="Contraseña"
                android:inputType="textPersonName"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/textoTelefonoRecogedor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/llave"
                android:drawablePadding="20dp"
                android:hint="Teléfono"
                android:inputType="phone"
                android:textSize="24sp" />

            <Button
                android:id="@+id/botonGenerarDatos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:background="@drawable/background_generar"
                android:text="Generar datos"
                android:textAllCaps="false"
                android:textColor="@color/md_white_1000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/botonConfirmarRecogedor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:background="@drawable/background_ingresar"
                android:text="Confirmar"
                android:textAllCaps="false"
                android:textColor="@color/md_white_1000"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>